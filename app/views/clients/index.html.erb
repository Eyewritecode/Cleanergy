<div class="jumbotron">
  <h1>Admin Dashboard</h1>
  <h2>List of WeBill customers! </h2>
</div>
<div class="container">
<div align="center">
<table class="table table-bordered">
  <thead> 
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Sign in Count</th>
      <th>Last sign in</th>
      <th colspan= "2">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.id %></td>
        <td><%= client.email %></td>
        <td><%= client.sign_in_count %></td>
        <td><%= client.last_sign_in_at %></td>
        <td><%= link_to 'Destroy', admin_destroy_user_path(client), method: :delete, data: { confirm: 'Are you sure?' } %></td></td>
        <td><a href="#"> Edit </a></td>
      </tr>
    <%end%>
  </tbody>
</table>

<br>
</div>
<%= link_to "Back", root_path %>
</div>