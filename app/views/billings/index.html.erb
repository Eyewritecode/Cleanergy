<div class="jumbotron">
  <h1>Handcrafted items from <br>
  around the world. </h1>
  <h2> Discover one-of-a-kind items </h2>
</div>
<p id="notice"><%= notice %></p>

<h1>Listing Billings</h1>

<table>
  <thead>
    <tr>
      <th>Meter number</th>
      <th>Meter image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @billings.each do |billing| %>
      <tr>
        <td><%= billing.meter_number %></td>
        <td><%= billing.meter_image %></td>
        <td><%= link_to 'Show', billing %></td>
        <td><%= link_to 'Edit', edit_billing_path(billing) %></td>
        <td><%= link_to 'Destroy', billing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

